#: kivy 2.1.0
# Class definition as ::=      < CustomClass @ BaseClass >
# Class instantiation as ::=   Class:

<NavigationPane@RelativeLayout>:
    Label:
        text: "NavigationPane"
        halign: "right"

<DisplayPane@RelativeLayout>:
    Label:
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        text: "DisplayPane"

<TagPane>:
    # Label:
    #     text: "TagPane"

<OptionsBar@Label>:
    canvas.before:
        Color:
            rgba: 0, 0.2, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    text: "OptionsBar"

<RootWidget>:
    BoxLayout:
        orientation: "vertical"
        OptionsBar:
            size_hint_y: 0.06
        BoxLayout:
            # size_hint_y: 0.94
            NavigationPane:
                size_hint_x: 0.28
            DisplayPane:
                size_hint_x: 0.44
            TagPane:
                size_hint_x: 0.28
