#: kivy 2.1.0
#: include displayTagPane.kv
#: include displayFileNavigator.kv
#: include displayFilePane.kv
#: include modals.kv

<OptionsBar@BoxLayout>:

<ActionLogBar@BoxLayout>:


<RootWidget>:
    orientation: "vertical"
    BoxLayout:                      # Options Bar
        size_hint_y: 0.06
        size_hint_max_y: 35
        orientation: "horizontal"
        Button:
            size_hint: 0.1, 1
            text: "Open DB"
            on_press: root.open_db()
        Button:
            size_hint: 0.15, 1
            text: "Create New DB"
            on_press: root.create_new_db()
        Button:
            size_hint: 0.15, 1
            text: "Settings"
            on_press: app.open_settings()
        Label:
            canvas.before:
                Color:
                    rgba: 0, 0.2, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            # text: "OptionsBar"
    BoxLayout:
        size_hint_y: 0.94
        FileNavigationPane:
            id: file_nav
            db: root.db
            groups: root.groups
            tags: root.tags
            files: root.files
            size_hint_x: 0.30
            size_hint_max_x: 350
            # on_size: print(self.width)
        FileDisplayPane:
            id: file_display
            db: root.db
            groups: root.groups
            tags: root.tags
            files: root.files
            active_file: file_nav.active_selected_file                # bind
            refresh_database: file_nav.refresh_view
            size_hint_x: 0.46
        TagPane:
            id: tag_pane
            db: root.db
            groups: root.groups
            tags: root.tags
            add_tag_func: file_display.append_tag          # Pass dbl click func for TagNode objects
            size_hint_x: 0.24
            size_hint_max_x: 290
            # on_size: print(self.width)
    ActionLogBar:
        size_hint_y: 0.04
        size_hint_max_y: 25
        Label:
            size_hint: 0.26, 1
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: str(root.current_db).split("/")[-1]
        Label:
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "ActionLogBar: Print useful messages and user actions here"