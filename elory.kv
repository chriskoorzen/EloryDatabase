#: kivy 2.1.0
#: include displayTagPane.kv
#: include displayFileNavigator.kv
#: include displayFilePane.kv

<OptionsBar@Label>:
    canvas.before:
        Color:
            rgba: 0, 0.2, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    text: "OptionsBar"

<ActionLogBar@Label>:
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    text: "ActionLogBar: Print useful messages and user actions here"

<RootWidget>:
    orientation: "vertical"
    OptionsBar:
        size_hint_y: 0.06
        size_hint_max_y: 35
        # on_size: print(self.height)
    BoxLayout:
        # size_hint_y: 0.94
        FileNavigationPane:
            id: file_nav
            size_hint_x: 0.32
            size_hint_max_x: 385
            # on_size: print(self.width)
        FileDisplayPane:
            id: file_display
            size_hint_x: 0.44
        TagPane:
            id: tag_pane
            size_hint_x: 0.24
            size_hint_max_x: 290
            # on_size: print(self.width)
    ActionLogBar:
        size_hint_y: 0.04
        size_hint_max_y: 25
