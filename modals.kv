
<UserInputBase>:
    title: 'Get User Input'
    size_hint: None, None
    size: (360, 240)
    overlay_color: 0, 0, 0, 0.2                             # Default is 0, 0, 0, 0.7
    placeholder: placeholder
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        Placeholder:
            id: placeholder
        BoxLayout:
            size_hint_max_y: 70
            orientation: "horizontal"
            padding: 0, 30, 0, 0
            Button:
                id: acceptBtn
                text: "Submit"
                on_press: root.get_user_input()                     # Specify a function to call
                # on_release: root.dismiss()
            Button:
                id: cancelBtn
                text: "Cancel"
                on_press: root.dismiss()

<TextAndInfo>:
    orientation: "vertical"
    Label:
        id: info
        pos_hint: {"top": 1}
        text: ""
        text_size: self.size            # Set text size same as Label size - wrapping behaviour
        valign: "center"
        padding_x: 8
        italic: True
    TextInput:
        id: user_input
        # padding: 0, 0, 0, 30
        size_hint_max_y: 35
        pos_hint: {"top": 0.5}
        hint_text: ".. User input here .."
        multiline: False
        # on_text_validate: root.dismiss()                      # Specify a function to call

<TextInfoAndOption>:
    # Extends TextAndInfo
    BoxLayout:
        orientation: "horizontal"
        Label:
            size_hint: 0.7, 1
            text: "Load Example values"
            text_size: self.size
            valign: "center"
            padding_x: 8
        CheckBox:
            id: check_option
            size_hint: 0.3, 1
            state: "normal"

<OptionList>
    do_scroll_x: False
    scroll_type: ["bars"]
    TreeView:
        id: list_tree
        # root_options: {"text": "Tag Groups", "no_selection": True}
        size_hint: 1, None
        height: self.minimum_height             # Auto update on height change to fit all children

# Notify User of something
<Notification>:
    title: 'Notification'
    size_hint: None, None
    size: (450, 300)
    overlay_color: 0, 0, 0, 0.2                             # Default is 0, 0, 0, 0.7
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        Label:
            id: info
            text: ""
            text_size: self.size            # Set text size same as Label size - wrapping behaviour
            valign: "center"
            padding_x: 8
            italic: True
        Button:
            id: cancelBtn
            size_hint_y: None
            height: 40
            text: "OK"
            on_press: root.dismiss()
