
# Get text - User input
<UserInputBox>:
    title: 'Get User Input'
    size_hint: None, None
    size: (300, 200)
    overlay_color: 0, 0, 0, 0.2                             # Default is 0, 0, 0, 0.7
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        TextInput:
            id: user_input
            size_hint_max_y: 35
            pos_hint: {"top": 1}
            hint_text: ".. User input here .."
            multiline: False
            # on_text_validate: root.dismiss()                      # Specify a function to call
        Label:
            id: info
            text: ""
            text_size: self.size            # Set text size same as Label size - wrapping behaviour
            valign: "center"
            padding_x: 8
            italic: True
        BoxLayout:
            size_hint_max_y: 40
            orientation: "horizontal"
            Button:
                id: acceptBtn
                text: "Submit"
                on_press: root.get_user_input()                     # Specify a function to call
                on_release: root.dismiss()
            Button:
                id: cancelBtn
                text: "Cancel"
                on_press: root.dismiss()


# Select option from custom list
<SelectFromList>:
    title: 'Select from List'
    size_hint: None, None
    size: (400, 350)
    overlay_color: 0, 0, 0, 0.2                             # Default is 0, 0, 0, 0.7
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            do_scroll_x: False
            scroll_type: ["bars"]
            TreeView:
                id: list_tree
                # root_options: {"text": "Tag Groups", "no_selection": True}
                size_hint: 1, None
                height: self.minimum_height             # Auto update on height change to fit all children
        BoxLayout:
            size_hint_max_y: 40
            orientation: "horizontal"
            Button:
                id: acceptBtn
                text: "Submit"
                on_press: root.get_user_input()
                on_release: root.dismiss()
            Button:
                id: cancelBtn
                text: "Cancel"
                on_press: root.dismiss()


# Select a file or folder from system
<SelectSystemObject>:
    title: "Select File/Folder"
    size_hint: 0.5, 0.7
    BoxLayout:
        orientation: "vertical"
        FileChooserIconView:
            id: chooser
            size_hint: 1, 0.8
            pos_hint: {"top": 0.9}
            # path: str(Path.home())                # Directory to open from
            # dirselect: True                       # Can select directories
        BoxLayout:
            orientation: "horizontal"
            size_hint_max_y: 40
            Button:
                id: acceptBtn
                text: "Submit"
                on_press: root.selected_path=chooser.selection
                on_release: root.dismiss()
            Button:
                id: cancelBtn
                text: "Cancel"
                on_press: root.dismiss()



# Notify User of something
<Notification>:
    title: 'Notification'
    size_hint: None, None
    size: (450, 300)
    overlay_color: 0, 0, 0, 0.2                             # Default is 0, 0, 0, 0.7
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        Label:
            id: info
            text: ""
            text_size: self.size            # Set text size same as Label size - wrapping behaviour
            valign: "center"
            padding_x: 8
            italic: True
        Button:
            id: cancelBtn
            size_hint_y: None
            height: 40
            text: "OK"
            on_press: root.dismiss()
