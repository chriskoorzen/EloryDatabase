
<FileDisplayPane>:
    Label:
        id: pane_name
        text: "File Display"
        size_hint: 1, 0.06
        size_hint_max_y: 40
        pos_hint: {"top": 1}
    Button:
        id: save_btn
        text: "Save Changes"
        size_hint: 0.3, 0.06
        size_hint_max_y: 40
        size_hint_max_x: 200
        y: pane_name.y - pane_name.height
        pos_hint: {'right': 1}
        on_press: root.save_changes()
    BoxLayout:                                              # Image (file) display boundary box
        id: display_box
        padding: [0, 0, 0, 0]
        size_hint: 1, 0.63
        top: save_btn.y
        Image:
            id: file_display
            source: "resources/happy_icon.png"
            # canvas:
            #     Color:
            #         rgba: 0.7, 0.7, 0.7, 0.7
            #     Rectangle:
            #         size: file_display.size
            #         pos: file_display.pos
    StackLayout:                                            # Active file's Tag display box
        id: tag_display
        size_hint: 1, 0.30
        top: display_box.y
        padding: 8
        orientation: 'lr-tb'
        spacing: 5


<TagButton>:
    # text: {tag.name}
    # color: show status
    size_hint: None, None
    padding: (12, 12)
    size: self.texture_size
